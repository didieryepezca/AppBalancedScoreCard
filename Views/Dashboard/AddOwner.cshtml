@model OpplusBSC.Models.Entities.TB_PERSPECTIVA_OWNER


<script type="text/javascript">

    var result = '@ViewBag.exito';

    console.log(result);

    window.onload = load;

        function load() {

            if (result != "") {

                AlertaActualizacion();

            } else {
                Atencion();
            }
        }

        function AlertaActualizacion() {

            if (result == "EXITO") {

                Swal.fire('Registrado!', 'La informacion se guardo correctamente', 'success')

            } else {

                Swal.fire('ERROR', 'No se pudo agregar, contacta Administrador', 'warning')

            }
        }

        function Atencion() {

            Swal.fire('LEEME', 'A continuacion ingrese correctamente los datos solicitados', 'warning')

        }

</script>


