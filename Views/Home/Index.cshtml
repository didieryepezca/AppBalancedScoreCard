<script type="text/javascript">    

    window.onload = load;

    function load() {       

        // Funcion para calcular 10 días habiles desde el primero de cada mes hasta que se debe cargar la data.

        function fnCalcularDiasLaborales(dDate1, dDate2) { 
              var iWeeks, iDateDiff, iAdjust = 0;
              if (dDate2 < dDate1) return -1; 
              var iWeekday1 = dDate1.getDay(); 
              var iWeekday2 = dDate2.getDay();
              iWeekday1 = (iWeekday1 == 0) ? 7 : iWeekday1; 
              iWeekday2 = (iWeekday2 == 0) ? 7 : iWeekday2;
              if ((iWeekday1 > 5) && (iWeekday2 > 5)) iAdjust = 1; 
              iWeekday1 = (iWeekday1 > 5) ? 5 : iWeekday1; 
              iWeekday2 = (iWeekday2 > 5) ? 5 : iWeekday2;
             
              iWeeks = Math.floor((dDate2.getTime() - dDate1.getTime()) / 604800000)

              if (iWeekday1 < iWeekday2) { 
                iDateDiff = (iWeeks * 5) + (iWeekday2 - iWeekday1)
              } else {
                iDateDiff = ((iWeeks + 1) * 5) - (iWeekday1 - iWeekday2)
              }

              iDateDiff -= iAdjust 

              return (iDateDiff + 1); 
            }

        var dateObj = new Date();
        
        var month = dateObj.getUTCMonth() + 1; //meses del 1-12
        var year = dateObj.getUTCFullYear();

        primeroDeCadaMes = year + "/" + month + "/" + 1;            

        var date1 = new Date(primeroDeCadaMes); // Primero de cada mes
        var date2 = new Date(); // Día Actual para hacer la resta con Primero de cada mes         

        var diasRestantes = fnCalcularDiasLaborales(date1, date2);

        if (diasRestantes >= 1 && diasRestantes <= 10) {

            Swal.fire('Cargar Data, Faltan: ' + diasRestantes + ' Días', 'Data correspondiente al mes anterior, si ya la cargo omita este mensaje.', 'warning')

        } else {

            console.log("Aun no se debe alertar");
        }     

    }
</script>



